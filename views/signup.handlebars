<div class="card">
  <div class="card-header">
    <h2>Sign up for a new account</h2>
  </div>

  <form id="signup-form" class="card-body">

    <div>
      <label for="email-input-signup">Email</label>
      <input type="text" id="email-input-signup" />
    </div>

    <div>
      <label for="password-input-signup">Password</label>
      <input type="password" id="password-input-signup" />
    </div>

    <button type="submit" id="signup-btn" class="btn" >Submit</button>
    <a href="/login">Login if you already have an account.</a>
  </form>
  
</div>

<script src="/js/signup.js"></script>